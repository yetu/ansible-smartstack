#!/bin/bash
{% if smartstack_omnibus_install %}
/opt/smartstack/bin/nerve --config {{nerve_home}}/config.json >> {{nerve_log_file}} 2>&1
{% else %}
cd {{ nerve_install_dir }}
export GEM_HOME="{{ smartstack_env_variable.GEM_HOME }}"
exec bundle exec ./bin/nerve --config {{nerve_home}}/config.json >> {{nerve_log_file}} 2>&1
{% endif %}